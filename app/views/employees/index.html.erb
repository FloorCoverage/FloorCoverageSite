<h1>Employees</h1>
<%= render 'layouts/searchbar', locals: { msg: "Search Employee" } %>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.first_name, employee %></td>
        <td><%= link_to employee.last_name, employee %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Employee', new_employee_path %>
